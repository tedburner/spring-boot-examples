<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.sample.persist.CityMapper">

    <sql id="Base_Column_List">
        id, provinceId, name, description, status, createTime, updateTime
    </sql>

    <insert id="addCity" parameterType="com.springboot.sample.domain.DO.CityDO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO city (id,provinceId,name,description)
        VALUE (#{id},#{provinceId},#{name},#{description})
    </insert>

    <select id="selectByName" resultType="com.springboot.sample.domain.DO.CityDO">
        select
        <include refid="Base_Column_List"/>
        from city
        where name = #{cityName}
    </select>

    <select id="selectById" resultType="com.springboot.sample.domain.DO.CityDO">
        select
        <include refid="Base_Column_List"/>
        from city
        where id = #{id}
    </select>

    <select id="selectCityByProvinceId" resultType="com.springboot.sample.domain.DO.CityDO">
        select
        <include refid="Base_Column_List"/>
        from city
        where provinceId = #{provinceId}
    </select>
</mapper>